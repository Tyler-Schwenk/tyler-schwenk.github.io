# ============================================================
# EditorConfig - Maintains consistent coding styles
# https://editorconfig.org
# ============================================================

# Top-most EditorConfig file
root = true

# ============================================================
# ALL FILES - Default settings
# ============================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# ============================================================
# HTML FILES
# ============================================================
[*.html]
indent_style = tab
indent_size = 4

# ============================================================
# CSS / SCSS FILES
# ============================================================
[*.{css,scss,sass}]
indent_style = tab
indent_size = 4

# ============================================================
# JAVASCRIPT FILES
# ============================================================
[*.js]
indent_style = tab
indent_size = 4
quote_type = single

# ============================================================
# JSON FILES
# ============================================================
[*.json]
indent_style = space
indent_size = 2

# ============================================================
# YAML FILES
# ============================================================
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# ============================================================
# MARKDOWN FILES
# ============================================================
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# ============================================================
# PACKAGE FILES
# ============================================================
[package.json]
indent_style = space
indent_size = 2
